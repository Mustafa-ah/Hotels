<Window x:Class="Hotels.Views.AddHotel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotels.Views"
        mc:Ignorable="d"
        Title="Add" Height="600" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Grid.Row="0" Grid.Column="0" Margin="5" FontSize="20"
               Content="اضافه فندق جديد" HorizontalAlignment="Center" VerticalAlignment="Center"/>


        <Label Grid.Row="1" Grid.Column="1" Margin="5"
               Content="اسم الفندق" HorizontalAlignment="Center" VerticalAlignment="Center"/>


        <TextBox x:Name="textBoxName" HorizontalAlignment="Stretch" Margin="10" Padding="5"
                 Grid.Row="1" TextWrapping="Wrap" Grid.Column="0"
                 TextAlignment="Right" VerticalContentAlignment="Center"
                  VerticalAlignment="Stretch"/>

        <Label Grid.Row="2" Grid.Column="1" Margin="5"
               Content="عدد الخزانات" HorizontalAlignment="Center" VerticalAlignment="Center"/>


        <TextBox x:Name="textBoxTankCount" HorizontalAlignment="Stretch" Margin="10" Padding="5"
                 Grid.Row="2" TextWrapping="Wrap" Grid.Column="0"
                 TextAlignment="Right" VerticalContentAlignment="Center"
                  VerticalAlignment="Stretch"/>

        <Label Grid.Row="3" Grid.Column="1" Margin="5"
               Content="متوسط حجم الخزان" HorizontalAlignment="Center" VerticalAlignment="Center"/>


        <TextBox x:Name="textBoxTankSize" HorizontalAlignment="Stretch" Margin="10" Padding="5"
                 Grid.Row="3" TextWrapping="Wrap" Grid.Column="0"
                 TextAlignment="Right" VerticalContentAlignment="Center"
                  VerticalAlignment="Stretch"/>

        <Label Grid.Row="4" Grid.Column="1" Margin="5"
               Content="العنوان" HorizontalAlignment="Center" VerticalAlignment="Center"/>


        <TextBox x:Name="textBoxAdress" HorizontalAlignment="Stretch" Margin="10" Padding="5"
                 Grid.Row="4" TextWrapping="Wrap" Grid.Column="0"
                 TextAlignment="Right" VerticalContentAlignment="Center"
                  VerticalAlignment="Stretch"/>

        <Label Grid.Row="5" Grid.Column="1" Margin="5"
               Content="الموبايل" HorizontalAlignment="Center" VerticalAlignment="Center"/>


        <TextBox x:Name="textBoxMobile" HorizontalAlignment="Stretch" Margin="10" Padding="5"
                 Grid.Row="5" TextWrapping="Wrap" Grid.Column="0"
                 TextAlignment="Right" VerticalContentAlignment="Center"
                 VerticalAlignment="Stretch"/>

        <Button x:Name="Save" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" Content="حفظ" Click="Save_Click" FontSize="30"
                HorizontalAlignment="Center" Width="200" VerticalAlignment="Center"/>

    </Grid>
</Window>
